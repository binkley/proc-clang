#!/usr/bin/env bash

set -e
set -o pipefail

: "${ICLIBHOME:?ICLIBHOME undefined}"
export LD_LIBRARY_PATH=$ICLIBHOME:$LD_LIBRARY_PATH

# Emulate proc behavior w.r.t. source file
for arg
do
    case $arg in
    *=* ) case ${arg%%=*} in
        [iI][nN][aA][mM][eE] ) source=${arg#*=} ; break ;;
        esac ;;
    * ) source=$arg ; break ;;
    esac
done

$ICSDKHOME/proc "$@" | sed 1,7d
rm -f ${source%.pc}.lis
