#include "proc-gcc.h"

#include <stdlib.h>
#include <stdio.h>
#include <string.h>

#include <sqlca.h>

#include "sql-error.h"

void
oracle_login(char const *username, char const *password)
{
    char const *connect = "10.240.36.131/SWM1";

/* Connect to ORACLE. */
    EXEC SQL WHENEVER SQLERROR DO sql_error("ORACLE error--");

    EXEC SQL CONNECT :username IDENTIFIED BY :password
        USING :connect;
    printf("\nConnected to ORACLE as user: %s\n", username);
}
